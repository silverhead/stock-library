
<table class="table">
    <thead>
    <tr>
        <th>Libellé</th>
        <th>Référence</th>
        <th>Photo</th>
        <th>Categories</th>
        <th>Rangement</th>
        <th>Quantité</th>
        <th>actions</th>
    </tr>
    </thead>
    <tbody>
    {% for product in products %}
        <tr>
            <td>{{ product.label }}</td>
            <td>{{ product.reference}}</td>
            <td>
                {% if product.picture is not empty %}
                    <img src="{{ asset(product.getPictureWebPath()) }}" height="80">
                {% endif %}
            </td>
            <td>
                {% for category in product.categories %}
                    {% for cat in categoryRepo.getPath(category) %}
                        {{ cat.label }}
                        {% if loop.index != loop.last %}/{% endif %}
                    {% endfor %}
                    <br />
                {% endfor %}
            </td>
            <td>
                {% if product.getProductByUserFiltered(app.getUser())|length > 0 %}
                    {% for sto in storageRepo.getPath(product.getProductByUserFiltered(app.getUser())[0].storage) %}
                        {{ sto.label }}
                        {% if loop.index != loop.last %}/{% endif %}
                    {% endfor %}
                {% else %}
                    Aucun rangement définie
                {% endif %}
             </td>
            <td class="text-center">{% if product.getProductByUserFiltered(app.getUser())|length > 0 %} {{ product.getProductByUserFiltered(app.getUser())[0].quantity }}{% else %}0{% endif %}</td>
            <td>
                {% include 'common/viewLink.html.twig' with {'path': path('product_show', {'id': product.id})} %}
                {% include 'common/editLink.html.twig' with {'path': path('product_edit', {'id': product.id})} %}
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="9">Pas de données</td>
        </tr>
    {% endfor %}
    </tbody>
</table>