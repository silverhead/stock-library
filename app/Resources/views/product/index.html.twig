{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Liste des produits{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('js/plugins/BsMultiSelect.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/product/filter.js') }}"></script>
{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-12">
        <h1>Liste des produits</h1>
    </div>
</div>
<div class="row">
    <div class="col-md-10">
        <p>{% include 'common/addLink.html.twig' with {'path': path('product_new'), 'label': 'Ajouter un nouveau produit'} %}</p>
    </div>
    <div class="col-md-2">
        <p>
        {% include 'product/buttonDisplayFilter.html.twig' %}
        </p>
    </div>
</div>
<div class="row">
    <div class="col-md-12 ">
        <div class="row">
            <div class="col-md-12">
                {{ productFilterTpl|raw }}
            </div>
        </div>
        {{ productSorterTpl|raw }}
        {% include 'product/list.html.twig' %}
    </div>
</div>
    <div class="row">
        <div class="col-md-12">
            {% include 'common/pagination.html.twig' %}
        </div>
    </div>
{% endblock %}
