{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12"><h1><a href="{{ path('category_index') }}" class="btn btn-light">Retour</a> Cat√©gorie : "{{ category.label }}"</h1></div>
    </div>
<div class="row">
    <div class="col-md-4">
        {% if category.picture != "" %}
            <img src="{{ asset(category.getPictureWebPath()) }}" class="img-fluid border border-dark">
        {% endif %}
    </div>
    <div class="col-md-8">
        <p><a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-warning">Modifier</a></p>
        <h2>Description</h2>
        <div>{{ category.description }}</div>
    </div>
</div>
{% endblock %}
